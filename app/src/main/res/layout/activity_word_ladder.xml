<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spencermassey.test.MainActivity"
    android:background="@drawable/ladder"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:onClick="display"
        android:text="@string/hint"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Answer"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <TextView
        android:id="@+id/hint1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:onClick="display1"
        android:text="@string/hint"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Answer1"
        app:layout_constraintTop_toBottomOf="@+id/hint" />

    <TextView
        android:id="@+id/hint2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:onClick="display2"
        android:text="@string/hint"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Answer2"
        app:layout_constraintTop_toBottomOf="@+id/hint1" />

    <TextView
        android:id="@+id/hint3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:onClick="display3"
        android:text="@string/hint"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Answer3"
        app:layout_constraintTop_toBottomOf="@+id/hint2" />

    <TextView
        android:id="@+id/hint4"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:onClick="display4"
        android:text="@string/hint"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Answer4"
        app:layout_constraintTop_toBottomOf="@+id/hint3" />

    <EditText
        android:id="@+id/start"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/start"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Answer"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:capitalize="words"
        android:ems="10"
        android:focusedByDefault="true"
        android:gravity="center"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/Answer1"
        android:selectAllOnFocus="true"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <EditText
        android:id="@+id/Answer1"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:capitalize="words"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/Answer2"
        android:selectAllOnFocus="true"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer" />


    <EditText
        android:id="@+id/Answer2"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:capitalize="words"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/Answer3"
        android:selectAllOnFocus="true"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer1" />

    <EditText
        android:id="@+id/Answer3"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:capitalize="words"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/Answer4"
        android:selectAllOnFocus="true"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer2" />


    <EditText
        android:id="@+id/Answer4"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:capitalize="words"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/Answer"
        android:selectAllOnFocus="true"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer3" />

    <EditText
        android:id="@+id/end"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/end"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer4"
        />


    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/check"
        app:layout_constraintLeft_toRightOf="@+id/hint1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintVertical_bias="0.086"
        android:onClick="exit" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/check"
        app:layout_constraintLeft_toRightOf="@+id/hint"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintVertical_bias="0.416"
        android:onClick="Reset"/>


</android.support.constraint.ConstraintLayout>

